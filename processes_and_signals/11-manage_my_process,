#!/usr/bin/env bash
# Init script to start, stop, or restart manage_my_process and handle its PID file

PID_FILE="/var/run/my_process.pid"
SCRIPT_PATH="/path/to/manage_my_process"  # replace with full path if needed

start() {
    $SCRIPT_PATH &  # run in background
    echo $! > "$PID_FILE"
    echo "manage_my_process started"
}

stop() {
    if [ -f "$PID_FILE" ]; then
        kill -9 $(cat "$PID_FILE") 2>/dev/null
        rm -f "$PID_FILE"
    fi
    echo "manage_my_process stopped"
}

restart() {
    stop
    start
    echo "manage_my_process restarted"
}

case "$1" in
    start) start ;;
    stop) stop ;;
    restart) restart ;;
    *) echo "Usage: manage_my_process {start|stop|restart}" ;;
esac

